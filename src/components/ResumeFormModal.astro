<div id="resume-form-modal" class="fixed inset-0 z-50 hidden bg-black/50 backdrop-blur-sm flex items-center justify-center">
  <div class="bg-white w-full max-w-2xl p-6 rounded-lg shadow-xl">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-semibold text-gray-800">Build Your Resume</h3>
      <button onclick="document.getElementById('resume-form-modal').classList.add('hidden')">âŒ</button>
    </div>
    <form id="resume-form" class="space-y-4">
      <input type="text" placeholder="Full Name" name="name" class="input" required />
      <input type="email" placeholder="Email Address" name="email" class="input" required />
      <input type="text" placeholder="Target Job Title" name="job" class="input" required />
      <textarea placeholder="Education" name="education" class="input" rows="3"></textarea>
      <textarea placeholder="Experience" name="experience" class="input" rows="3"></textarea>
      <textarea placeholder="Skills" name="skills" class="input" rows="2"></textarea>
      <label class="inline-flex items-center">
        <input type="checkbox" name="cover-letter" class="mr-2" />
        Also generate cover letter
      </label>
      <div class="text-right">
        <button type="submit" class="btn btn-primary">Generate</button>
      </div>
    </form>
  </div>
</div>
