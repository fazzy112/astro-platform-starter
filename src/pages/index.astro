<div id="formModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
  <div class="flex justify-center items-center h-full w-full">
    <div class="bg-gradient-to-br from-indigo-500 via-purple-600 to-pink-500 text-white p-8 rounded-2xl max-w-lg w-full max-h-[90vh] overflow-y-auto">
      <h3 class="text-xl font-bold mb-4">Enter Your Resume Details</h3>
      <form id="resumeForm" class="space-y-4">
        <input type="text" name="name" placeholder="Full Name" class="w-full p-2 border rounded text-black" required>
        <input type="text" name="title" placeholder="Job Title" class="w-full p-2 border rounded text-black">
        <textarea name="summary" placeholder="Professional Summary" class="w-full p-2 border rounded text-black"></textarea>
        <button type="submit" class="bg-indigo-700 text-white px-4 py-2 rounded">Generate Resume</button>
        <button type="button" id="closeFormBtn" class="ml-2 text-white">Cancel</button>
      </form>
    </div>
  </div>
</div>

<div id="uploadModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
  <div class="flex justify-center items-center h-full w-full">
    <div class="bg-gradient-to-br from-indigo-500 via-purple-600 to-pink-500 text-white p-8 rounded-2xl max-w-lg w-full max-h-[90vh] overflow-y-auto">
      <h3 class="text-xl font-bold mb-4">Upload Your Old Resume</h3>
      <form id="uploadForm" class="space-y-4">
        <input type="file" name="file" accept=".pdf,.doc,.docx" required class="w-full text-black">
        <textarea name="job" placeholder="Paste Job Description or Title" class="w-full p-2 border rounded text-black"></textarea>
        <button type="submit" class="bg-pink-700 text-white px-4 py-2 rounded">Generate Resume</button>
        <button type="button" id="closeUploadBtn" class="ml-2 text-white">Cancel</button>
      </form>
    </div>
  </div>
</div>
