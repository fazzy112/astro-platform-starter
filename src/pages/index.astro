<!-- Astro index.astro page based on all provided parts -->
---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class="container mx-auto px-4 py-20">
    <!-- Hero Section -->
    <section class="text-center mb-20">
      <h1 class="text-5xl font-bold mb-6 text-blue-800">
        Create Your Resume Instantly with AI
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        Resumia helps job seekers create professional resumes in seconds.
      </p>
      <div class="flex justify-center gap-4">
        <button id="start-resume-btn" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg shadow">
          Start from Scratch
        </button>
        <button id="upload-resume-btn" class="bg-white border border-blue-600 text-blue-600 hover:bg-blue-50 font-semibold py-2 px-6 rounded-lg shadow">
          Upload Existing Resume
        </button>
      </div>
    </section>

    <!-- Modals -->
    <!-- Resume Form Modal -->
    <!-- Upload Resume Modal -->
    <!-- Resume Preview Modal -->
    <!-- (All modal HTML from your last part goes here without change) -->
  </main>

  <script>
    document.getElementById('start-resume-btn')?.addEventListener('click', () => {
      document.getElementById('resume-form-modal').classList.remove('hidden');
    });

    document.getElementById('upload-resume-btn')?.addEventListener('click', () => {
      document.getElementById('upload-resume-modal').classList.remove('hidden');
    });

    document.getElementById('close-resume-form')?.addEventListener('click', () => {
      document.getElementById('resume-form-modal').classList.add('hidden');
    });

    document.getElementById('cancel-resume-form')?.addEventListener('click', () => {
      document.getElementById('resume-form-modal').classList.add('hidden');
    });

    document.getElementById('close-upload-resume')?.addEventListener('click', () => {
      document.getElementById('upload-resume-modal').classList.add('hidden');
    });

    document.getElementById('cancel-upload-form')?.addEventListener('click', () => {
      document.getElementById('upload-resume-modal').classList.add('hidden');
    });

    document.getElementById('close-preview')?.addEventListener('click', () => {
      document.getElementById('resume-preview-modal').classList.add('hidden');
    });
  </script>
</Layout>
