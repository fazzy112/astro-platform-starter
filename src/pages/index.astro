---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class="container mx-auto px-4 py-16">

    <!-- Hero Section -->
    <section class="text-center mb-20">
      <h1 class="text-5xl font-bold text-blue-800 mb-4">Create Your Resume Instantly with AI</h1>
      <p class="text-xl text-gray-600 mb-8">Resumia helps job seekers generate professional resumes tailored to job descriptions using AI.</p>
      <div class="flex justify-center space-x-4">
        <button onclick="document.getElementById('resume-form-modal').classList.remove('hidden')" class="px-6 py-3 text-white font-semibold rounded-lg gradient-bg shadow hover:opacity-90">Build Resume</button>
        <button onclick="document.getElementById('upload-resume-modal').classList.remove('hidden')" class="px-6 py-3 text-indigo-700 font-semibold rounded-lg border border-indigo-600 hover:bg-indigo-50">Upload Resume</button>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="mb-16 text-center">
      <h2 class="text-3xl font-semibold mb-6">How It Works</h2>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
        <div class="p-6 bg-white rounded-xl shadow-md">
          <h3 class="text-xl font-semibold mb-2">1. Fill Out or Upload</h3>
          <p class="text-gray-600">Provide your information or upload an existing resume.</p>
        </div>
        <div class="p-6 bg-white rounded-xl shadow-md">
          <h3 class="text-xl font-semibold mb-2">2. AI Enhances</h3>
          <p class="text-gray-600">Our AI tailors your resume to your target job description.</p>
        </div>
        <div class="p-6 bg-white rounded-xl shadow-md">
          <h3 class="text-xl font-semibold mb-2">3. Download</h3>
          <p class="text-gray-600">Watch a short ad and download your resume instantly.</p>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="mb-20">
      <h2 class="text-3xl font-semibold text-center mb-8">Why Choose Resumia?</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="p-6 bg-gray-50 rounded-xl border">
          <h4 class="text-xl font-semibold mb-2">AI-Powered Resume Writing</h4>
          <p class="text-gray-600">Leverage the latest AI technology to write job-winning resumes effortlessly.</p>
        </div>
        <div class="p-6 bg-gray-50 rounded-xl border">
          <h4 class="text-xl font-semibold mb-2">ATS Friendly Format</h4>
          <p class="text-gray-600">Ensure your resume passes through Applicant Tracking Systems smoothly.</p>
        </div>
        <div class="p-6 bg-gray-50 rounded-xl border">
          <h4 class="text-xl font-semibold mb-2">Cover Letter Generator</h4>
          <p class="text-gray-600">Get a professional cover letter tailored to your resume and job role.</p>
        </div>
        <div class="p-6 bg-gray-50 rounded-xl border">
          <h4 class="text-xl font-semibold mb-2">Resume Score & Suggestions</h4>
          <p class="text-gray-600">Receive AI-generated feedback to boost your resume quality.</p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="text-center py-12 bg-gradient-to-r from-indigo-500 to-blue-600 rounded-xl text-white mb-20">
      <h2 class="text-4xl font-bold mb-4">Start Creating Your Resume Now</h2>
      <p class="text-lg mb-6">Join thousands of job seekers using Resumia to land interviews faster.</p>
      <button onclick="document.getElementById('resume-form-modal').classList.remove('hidden')" class="px-8 py-3 bg-white text-indigo-700 font-semibold rounded-lg shadow hover:bg-gray-100">Get Started</button>
    </section>

    <!-- Modals -->
    <div class="hidden" id="modals">
      <!-- All Modals from your full code go here -->
      <!-- For brevity, modals like resume-form-modal, upload-resume-modal, resume-preview-modal can be included here -->
    </div>
  </main>

  <script>
    // Modal close logic
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('[id^="close-"]').forEach(btn => {
        btn.addEventListener('click', () => {
          btn.closest('.fixed').classList.add('hidden');
        });
      });

      document.querySelectorAll('[id^="cancel-"]').forEach(btn => {
        btn.addEventListener('click', () => {
          btn.closest('.fixed').classList.add('hidden');
        });
      });
    });
  </script>
</Layout>
